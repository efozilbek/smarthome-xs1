<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/first_run_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TextView
        android:id="@+id/topic_firstrun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="@string/xsconf"
        android:textAppearance="?android:attr/textAppearanceLarge" >
    </TextView>

    <TextView
        android:id="@+id/topic_ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topic_firstrun"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/ip_in"
        android:textAppearance="?android:attr/textAppearanceLarge" >
    </TextView>

    <EditText
        android:id="@+id/text_ipurl"
        android:layout_width="fill_parent"
        android:layout_height="42dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/topic_ip"
        android:singleLine="true" >

        <requestFocus >
        </requestFocus>
    </EditText>

    <TextView
        android:id="@+id/topic_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_ipurl"
        android:layout_centerHorizontal="true"
        android:text="@string/in_user"
        android:textAppearance="?android:attr/textAppearanceLarge" >
    </TextView>

    <EditText
        android:id="@+id/text_user"
        android:layout_width="fill_parent"
        android:layout_height="42dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/topic_user"
        android:maxLength="19"
        android:singleLine="true"
        android:text="@string/std_user" >

    </EditText>

    <TextView
        android:id="@+id/topic_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_user"
        android:layout_centerHorizontal="true"
        android:text="@string/pw"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/text_pw"
        android:layout_width="fill_parent"
        android:layout_height="42dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/topic_pw"
        android:inputType="textPassword"
        android:maxLength="19"
        android:singleLine="true" />

    <Button
        android:id="@+id/button_firstrun"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_pw"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/ok" />

</RelativeLayout>